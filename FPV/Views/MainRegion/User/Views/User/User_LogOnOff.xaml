<vw:View
    x:Class="HMI.User.User_LogOnOff"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:vw="http://inosoft.com/visiwin7"
	Width="380" Height="110" Background="{StaticResource MainViewBackgroundBrush}">

    <vw:View.DataContext>
        <vw:AdapterBinding Name="UserLogOnOffAdapter"/>
    </vw:View.DataContext>

    <Grid x:Name="LayoutRoot" >
        <vw:TextVarIn Value="{Binding SelectedUser, Mode=TwoWay}"  Width="206" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Height="40" FontSize="14" LocalizableLabelText="@UserManagement.View.UserName"/>
        <vw:PasswordVarIn Value="{Binding Password, Mode=TwoWay}" Height="40" HorizontalAlignment="Right" Margin="0,60,10,0" TouchpadName="PasswordTouchpad" VerticalAlignment="Top" Width="206" LostKeyboardFocusBehavior="WriteInput" FontSize="14" LocalizableLabelText="@UserManagement.View.Password" />
    </Grid>

</vw:View>