<vw:View x:Class="HMI.Dashboard.DB_Widget_Calendar"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:vw="http://inosoft.com/visiwin7"
		Width="585" Height="225" >

    <Grid x:Name="LayoutRoot">
        <Border CornerRadius="5" Background="{DynamicResource FP_Dark}"/>
        <vw:Clock HorizontalAlignment="Stretch" DateTimeMode="DateOnly" FontSize="26.6666666666667" FontWeight="Bold" Foreground="#FFFFFFFF" FormatDate="@NamedLongDate" FontFamily="Segoe UI"  HorizontalContentAlignment="Center"  VerticalAlignment="Stretch"/>
    </Grid>

</vw:View>