<vw:View  x:Class="HMI.Dashboard.DB_Widget_Camera1"
          xmlns:vw="http://inosoft.com/visiwin7"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
          Width="585" Height="470" Background="Transparent" >
    <Grid  >
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border CornerRadius="5" Background="{DynamicResource FP_Dark}" Grid.RowSpan="2"/>
        <vw:TextBlock Grid.Row="0" TextAlignment="Left" Padding="10, 6, 0, 0" VerticalAlignment="Center" Foreground="White" FontSize="18" LocalizableText="@Dashboard.Text24"  />
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <vw:ScrollViewer x:Name="scroll" PanningMode="Both" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
                <vw:PictureBox x:Name="IMG" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased" Loaded="IMG_Loaded" Unloaded="IMG_Unloaded" PreviewTouchDown="IMG_PreviewTouchDown" SizeChanged="IMG_SizeChanged"/>
            </vw:ScrollViewer>
        </Grid>
    </Grid>
</vw:View>